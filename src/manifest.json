{
  "manifest_version": 3,
  "name": "ExtinctLLM",
  "description": "Show an alert on pages containing potentially AI-generated content.",
  "version": "0.1.0",
  "permissions": ["scripting", "storage"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_end"
    }
  ]
}
